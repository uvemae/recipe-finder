# Recipe Finder Environment Variables

# Database
DATABASE_PATH=./data/prices.db

# Estonian Translation API (optional)
ESTONIAN_API_URL=https://api.eki.ee/translate
ESTONIAN_API_KEY=your_api_key_here

# Price Scraping Settings
SCRAPING_DELAY=1000
SCRAPING_TIMEOUT=30000

# Cache Settings
CACHE_DURATION=3600000
PRICE_CACHE_HOURS=24

# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5174

# Grocery Store URLs
SELVER_URL=https://ecoop.selver.ee
RIMI_URL=https://www.rimi.ee
COOP_URL=https://www.coop.ee

# Logging
LOG_LEVEL=info